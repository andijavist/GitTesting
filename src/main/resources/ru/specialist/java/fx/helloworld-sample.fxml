<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?language javascript?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="10">
        <Button>1</Button>
        <Button>2</Button>
        <Button>3</Button>
    </HBox>
    <HBox alignment="CENTER" spacing="20">
        <Button>4</Button>
        <Button>5</Button>
        <Button>6</Button>
        <Button>7</Button>
        <padding>
            <Insets bottom="0" left="50" right="50" top="0" />
        </padding>
    </HBox>
    <GridPane alignment="CENTER" hgap="20" vgap="10">
        <TextField GridPane.columnIndex="0" GridPane.rowIndex="0">1</TextField>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0">2</TextField>
        <TextField GridPane.columnIndex="0" GridPane.rowIndex="1">3</TextField>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1">4</TextField>
        <padding>
            <Insets left="50" right="50" />
        </padding>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <Button alignment="CENTER" onAction="onButtonClick()">Click me!</Button>
    <Label fx:id="myLabel" />
    <fx:script>
        function onButtonClick(){
            myLabel.setText("Text changed!");
        }
    </fx:script>
    <padding>
        <Insets top="50.0" />
    </padding>
</VBox>
